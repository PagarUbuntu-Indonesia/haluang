<div class="sidebar">
<ul class="list--unstyled">

{%- for bag, page_sects in page_list | groupby('seksi') -%}
	<li>
		<h4 class="underlineMe">{{lang_config.seksi[bag]}}</h4>
		<ul class="list--unstyled">
		{% for page in page_sects|sort(attribute='path') %}
		<li>
			<a href="{{ page.path.replace('pages', '') }}" {% if current_lang_num is defined -%}
			{%- if page.path.replace('pages', '') == current_lang_num -%}
				 class="active-sidebar"
			{%- endif -%}
			{%- endif -%}>
			
			{%- if page.menu_title is defined -%}
				{{- page.menu_title|e -}}
			{%- else -%}
				{{- page.title -}}
			{%- endif -%}
			</a>		
		</li>
		{% endfor %}
		</ul>
	</li>
{% endfor %}

</ul>
</div>

